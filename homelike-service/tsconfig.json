{
  "compilerOptions": {
    "esModuleInterop": true,
    "target": "es2018",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "outDir": "./build",
    "rootDir": "./src",
    "baseUrl": ".",
    "module": "commonjs",
    "skipLibCheck": true
  },
  "include": ["src/**/*", "jest.config.js"],
  "exclude": ["build", "node_modules"]
}